{
  "name": "@amen24/backend",
  "author": "emadunan",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "description": "",
  "private": true,
  "scripts": {
    "build": "nest build",
    "seed": "nest build && cross-env NODE_ENV=development ts-node src/seed.ts",
    "seed:test": "nest build && cross-env NODE_ENV=test ts-node dist/seed",
    "seed:prod": "nest build && cross-env NODE_ENV=production ts-node dist/seed",
    "task": "nest build && cross-env NODE_ENV=development ts-node src/_tasks/run-task.ts",
    "task:test": "nest build && cross-env NODE_ENV=test ts-node src/_tasks/run-task.ts",
    "task:prod": "nest build && cross-env NODE_ENV=production ts-node src/_tasks/run-task.ts",
    "normalize:native": "nest build && cross-env NODE_ENV=development ts-node src/_tasks/normalize-native.ts",
    "normalize:native:test": "nest build && cross-env NODE_ENV=test ts-node src/_tasks/normalize-native.ts",
    "normalize:native:prod": "nest build && cross-env NODE_ENV=production ts-node src/_tasks/normalize-native.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NODE_ENV=production nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migrate:create": "cross-env NODE_ENV=development typeorm-ts-node-commonjs migration:create src/_migrations/$npm_config_name",
    "migrate:generate": "cross-env NODE_ENV=development typeorm-ts-node-commonjs migration:generate src/_migrations/${npm_config_name:-unnamed} -d src/_config/dataSource.config.ts",
    "migrate:up": "cross-env NODE_ENV=development typeorm-ts-node-commonjs migration:run -d src/_config/dataSource.config.ts",
    "migrate:up:test": "cross-env NODE_ENV=test typeorm-ts-node-commonjs migration:run -d dist/_config/dataSource.config.js",
    "migrate:up:prod": "cross-env NODE_ENV=production typeorm-ts-node-commonjs migration:run -d dist/_config/dataSource.config.js",
    "migrate:down": "cross-env NODE_ENV=development typeorm-ts-node-commonjs migration:revert -d src/_config/dataSource.config.ts",
    "migrate:down:test": "cross-env NODE_ENV=test typeorm-ts-node-commonjs migration:revert -d dist/_config/dataSource.config.js",
    "migrate:down:prod": "cross-env NODE_ENV=production typeorm-ts-node-commonjs migration:revert -d dist/_config/dataSource.config.js"
  },
  "dependencies": {
    "@amen24/shared": "file:../../packages/shared",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.1",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "joi": "^17.13.3",
    "nodemailer": "^6.10.0",
    "openai": "^5.1.0",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/cli-progress": "^3.11.6",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "cli-progress": "^3.12.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
