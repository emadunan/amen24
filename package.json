{
  "name": "@amen24/root",
  "author": "emadunan",
  "version": "1.0.0",
  "license": "ISC",
  "private": true,
  "description": "Amen24 is a free non-profitable project to introduce bible content for all.",
  "workspaces": [
    "backend",
    "frontend",
    "mobile",
    "shared"
  ],
  "scripts": {
    "clean": "find ./ -name node_modules -type d -exec rm -rf {} +",
    "dev": "pnpm run dev:backend & pnpm run dev:frontend & pnpm run dev:shared",
    "dev:backend": "pnpm --filter @amen24/backend run start:dev",
    "dev:frontend": "pnpm --filter @amen24/frontend run dev",
    "dev:mobile": "pnpm --filter @amen24/mobile run start",
    "dev:shared": "pnpm --filter @amen24/shared run watch"
  }
}